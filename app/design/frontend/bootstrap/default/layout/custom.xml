					<action method="setElementTagName">
						<value>div</value>
					</action>
					<action method="setElementClass">
						<value>row</value>
					</action>
					<block name="row1_list" type="core/text_list">
						<block name="content_row1_span3" type="page/html_wrapper" translate="label">
							<action method="setElementTagName">
								<value>div</value>
							</action>
							<action method="setElementClass">
								<value>col-sm-3</value>
							</action>
							<action method="setElementId">
								<value>home_navigation</value>
							</action>
							<!--
							<block name="customnav_homepage2" type="ecwtopnavigation/navigation" template="page/html/custommenu.phtml">
								<action method="setParentCategoryId">
									<value>38</value>
								</action>
							</block>
							-->
						</block>
			            <block name="content_row1_span9" type="page/html_wrapper" translate="label">
							<action method="setElementTagName">
								<value>div</value>
							</action>
							<action method="setElementClass">
								<value>col-sm-9</value>
							</action>
							
			                <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
				            <block type="page/html_wrapper" name="cms.wrapper" translate="label">
				                <label>CMS Content Wrapper</label>
				                <action method="setElementClass"><value>std</value></action>
				                <block type="cms/page" name="cms_page"/>
