   	<print>
        <reference name="head">
        	<action method="addItem"><type>skin_css</type><name>css/bootstrap.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/bootstrap-glyphicons.css</name></action>
			
			<action method="addItem"><type>skin_css</type><name>css/bootstrap-custom.css</name></action>
			<action method="addItem"><type>skin_css</type><name>css/custom.css</name></action>
        </reference>
    </print>
</layout>